{
  "name": "copin",
  "version": "0.0.6",
  "description": "Opinionated Config",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm test && npm run compile",
    "test": "jest",
    "test:cov": "npm test -- --coverage && open ./coverage/lcov-report/index.html",
    "lint": "eslint ./src/ && echo Lint OK",
    "clean:dist": "rm -rf dist/",
    "compile:dist": "babel src/ --out-dir dist/ --ignore __tests__",
    "compile": "npm run clean:dist && npm run compile:dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lecstor/copin.git"
  },
  "keywords": [
    "config"
  ],
  "author": "jason@lecstor.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "jest": "^19.0.2"
  },
  "dependencies": {
    "js-yaml": "^3.8.2",
    "lodash": "^4.17.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
